<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    android:fillViewport="true"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/rectangle"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_49"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_98"
                    android:layout_height="@dimen/dp_28"

                    android:layout_marginLeft="@dimen/dp_15"

                    />
                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_21"
                android:background="@drawable/white_shape_50"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:src="@mipmap/seacher_icon"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索内容"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:textColor="@color/color_gary_text"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:id="@+id/start"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@mipmap/banner"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="@dimen/dp_110"

                android:background="@drawable/white_shape_50"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_47"
                android:layout_height="@dimen/dp_32">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="领"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/white_shape_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_48"

                            android:src="@mipmap/home_taidi"
                            android:layout_height="@dimen/dp_48"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="泰迪"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_48"

                            android:src="@mipmap/home_bixiong"
                            android:layout_height="@dimen/dp_48"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="比熊"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_48"

                            android:src="@mipmap/home_bomei"
                            android:layout_height="@dimen/dp_48"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="博美"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_48"

                            android:src="@mipmap/home_keji"
                            android:layout_height="@dimen/dp_48"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="柯基"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"

                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_48"

                            android:src="@mipmap/home_more"
                            android:layout_height="@dimen/dp_48"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_28"

                            android:src="@mipmap/home_zhuliang"
                            android:layout_height="@dimen/dp_28"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主粮"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_28"

                            android:src="@mipmap/home_lingshi"
                            android:layout_height="@dimen/dp_28"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="零食"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_28"

                            android:src="@mipmap/home_xihu"
                            android:layout_height="@dimen/dp_28"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="洗护"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_28"

                            android:src="@mipmap/home_baojianpin"
                            android:layout_height="@dimen/dp_28"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保健品"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"

                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_28"

                            android:src="@mipmap/home_more1"
                            android:layout_height="@dimen/dp_28"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#F6F7F8"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@mipmap/home_chongwuqushi"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天你带狗狗去散步了吗？"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="#ff555555"
                        android:textSize="@dimen/sp_13"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_height="@dimen/dp_17" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="#ff9a9895"
                    android:textSize="@dimen/sp_12"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/right"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/re_mengxin"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_height="@dimen/dp_17" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="#ff9a9895"
                    android:textSize="@dimen/sp_12"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/right"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/re_dingyue"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:id="@+id/Rg_home"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="主食"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:id="@+id/rb_zhushi"
                    android:button="@null"
                    android:gravity="center"
android:drawableBottom="@drawable/rb_check_bg"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="零食"
                    android:layout_marginLeft="@dimen/dp_48"
                    android:id="@+id/rb_lingshi"
                    android:drawableBottom="@drawable/rb_check_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="洗护用品"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_48"
                    android:id="@+id/rb_xihu"
                    android:drawableBottom="@drawable/rb_check_bg"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="保健品"
                    android:button="@null"
                    android:layout_marginRight="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_48"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/rb_check_bg"
                    android:id="@+id/rb_baojian"
                    android:layout_height="wrap_content" />

            </RadioGroup>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/Vp_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300" />
        </LinearLayout>
    </LinearLayout>



</androidx.core.widget.NestedScrollView>